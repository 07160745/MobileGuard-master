<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.android.mobileguard.m9advancedtools.AdvanedToolsActivity">
    <include layout="@layout/titlebar"/>
    <cn.edu.gdmec.android.mobileguard.m9advancedtools.widget.AdvanedToolsView
        android:id="@+id/advanceview_numbelongs"
        app:desc="号码查询"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:src="@drawable/numofbelongto" />
    <cn.edu.gdmec.android.mobileguard.m9advancedtools.widget.AdvanedToolsView
        android:id="@+id/advanceview_smsbackup"
        app:desc="短信备份"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:src="@drawable/sms_backup"/>
    <cn.edu.gdmec.android.mobileguard.m9advancedtools.widget.AdvanedToolsView
        android:id="@+id/advanceview_smsreducition"
        app:desc="还原"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:src="@drawable/sms_reduction" />
    <cn.edu.gdmec.android.mobileguard.m9advancedtools.widget.AdvanedToolsView
        android:id="@+id/advanceview_applock"
        app:desc="还原"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:src="@drawable/programoflock" />
</LinearLayout>
